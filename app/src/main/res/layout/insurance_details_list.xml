<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:id="@+id/insurance_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_buy_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Online And Save"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="left"
                android:textColor="#FFA500"
                tools:ignore="NotSibling" />
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Rs.1245 "
            android:layout_below="@id/tv_buy_online"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textSize="10sp"
            android:drawableRight="@drawable/ic_arrow_"
            android:backgroundTint="#FFA500"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#FFA500"
            android:layout_toRightOf="@id/iv_bank_logo"
            android:text="Plan Details" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>


